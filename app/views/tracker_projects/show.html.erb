
<div class="page-header">


  <p class = "pull-right">  (showing first 500)</p>
  <h1>Stories for <%= @project_name %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th class= "col-md-3">Story</th>
      <th class= "col-md-3">Estimate</th>
      <th class= "col-md-3">Labels </th>
      <th class= "col-md-3">Current State </th>
    </tr>
  </thead>

  <% if @tracker_stories %>
    <% @tracker_stories.each do |story| %>
      <tr>
        <td class = "col-md-3">
          <%= story[:name] %>
        </td>

        <td class = "col-md-3">
          <%= story[:estimate] %>
        </td>

        <td>
          <% label_list = [] %>
          <% story[:labels].each do |label| %>
            <% label_list << label[:name] %>
          <% end %>
          <%= label_list.join(", ") %>
        </td>

        <td class = "col-md-3">
          <%= story[:current_state] %>

        </td>
      </tr>
    <% end %>
  <% end %>

</table>
