
= form_for(@user, html: { class: "form-horizontal" }) do |u|
  .form-group
    .col-md-2.text-right
      =u.label :first_name, class:"control-label"
    .col-md-6
      = u.text_field :first_name, class:"form-control"
    .col-md-4

  .form-group
    .col-md-2.text-right
      = u.label :last_name, class:"control-label"
    .col-md-6
      = u.text_field :last_name, class:"form-control"
    .col-md-2

  .form-group
    .col-md-2.text-right
      = u.label :email, class:"control-label"
    .col-md-6
      = u.email_field :email, class:"form-control"
    .col-md-2

  .form-group
    .col-md-6.col-md-offset-2
      = u.submit name_of_button, class: "btn btn-primary"
      = link_to 'cancel', users_path, class: "btn btn-default"

  - if name_of_button == "Update User"
    .form-group
      .col-md-6.col-md-offset-2
        .well
          %center
            = link_to 'Delete User', @user, method: :delete, class: "btn btn-danger"
