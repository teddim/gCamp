
<div class= "page-header">
  <h1><%= @user.first_name %> <%= @user.last_name %>
    <% if current_user == @user.id %>
      <%= link_to "Edit", edit_user_path(@user), class: "btn btn-info pull-right" %>
    <% end %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>First Name</dt>
  <dd><%= @user.first_name %> </dd>
  <dt>Last Name</dt>
  <dd><%= @user.last_name %> </dd>
  <% if current_user == @user.id || current_user.admin || belong_to_same_project(current_user,@user)%>
    <dt>Email</dt>
    <dd><%= mail_to @user.email %> </dd>
  <% end %>
</dl>
