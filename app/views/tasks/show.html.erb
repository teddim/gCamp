<div class="page-header">
  <%= link_to "Edit", edit_project_task_path(@task.project,@task), class: "btn btn-info pull-right" %>
  <% @task.complete ? this_class = 'strikethrough' : custom_class =''  %>
  <h1 class = <%= this_class %> ><%= @task.description.downcase.titleize %></h1>
</div>

<ol class="breadcrumb">
  <li><%= link_to 'Projects', projects_path %></li>
  <li><%= link_to @project.name, project_path(@project) %></li>
  <li><%= link_to 'Tasks', project_tasks_path %></li>
  <li class= "Active"> <%= @task.description %> </li>
</ol>

<strong>Due On</strong>:
<% if @task.due_date %>
  <%= @task.due_date.strftime("%m/%d/%Y") %>
<% end %>

<table>
  <tr>
    <th>
    <h3>Comments</h3>
    </th>
    <th>

    </th>
  </tr>
    <% @comments.each do |comment| %>
  <tr>
      <td class="col-md-3">
        <%= link_to comment.user.full_name, user_path(comment.user_id)%>
        <p class = "text-muted">
      <%= comment.time_in_words %>
        </p>
      </td>
      <td class = "col-md-9">
      <%= comment.content %>
      </td>
  </tr>
    <% end %>
  <tr>
    <td class="col-md-3">

    </td>
    <td class = "row col-md-9">
      <%= form_for [@comment.task, @comment] do |f| %>
        <div class="">
          <div><%= f.text_area :content, class: "col-md-9 form-control" %></div>
          <div>   </div>
          <div><%= f.submit "Add Comment", class: "btn btn-primary"%></div>
        </div>
      <% end %>
    </td>
  </tr>

</table>
