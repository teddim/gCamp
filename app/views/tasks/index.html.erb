<div class="page-header">
  <%= link_to "New Task", new_task_path, class: "btn btn-info pull-right" %>
  <h1>Listing Tasks</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th colspan= 2>Description</th>
    </tr>
  </thead>

  <% @tasks.each do |task| %>
  <tr>
    <td><%= link_to task.description, task %></td>
    <td class="text-right">
      <%= link_to 'Edit', edit_task_path(task), class: "btn btn-info" %>
      <%= link_to 'Delete', task, method: :delete, class: "btn btn-danger" %>
    </td>
  </tr>
  <% end %>
</table>
