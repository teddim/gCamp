<div class="page-header">
  <h1>New Task</h1>
</div>

<%= form_for(Task.new, html: { class: "form-horizontal" }) do |t| %>

<div class= "form-group">
    <%= t.label :description, class:"control-label col-sm-2" %>
    <div class= "col-sm-6"><%= t.text_field :description, class:"form-control" %></div>
</div>


<div class= "form-group">
  <div class="col-sm-6 col-sm-offset-2">
    <%= t.submit "Create Task", class: "btn btn-primary"%>
    <%= link_to 'Cancel', tasks_path, class: "btn btn-default" %>
  </div>
</div>
<% end %>
