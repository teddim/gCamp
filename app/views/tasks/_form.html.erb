
<ol class="breadcrumb">
  <li><%= link_to 'Tasks', tasks_path %></li>
    <% if @task[:description] != nil %>
    <li>
      <%= link_to @task[:description], task_path(@task) %>
    </li>
  <% end %>
  <li class="active"> <%= @page_name %> Task</li>
</ol>

<%= form_for(@task, html: { class: "form-horizontal" }) do |t| %>
  <div class= "row form-group">
    <div class="col-sm-2"><%= t.label :description, class:"control-label" %></div>
    <div class= "col-sm-6"><%= t.text_field :description, class:"form-control" %></div>
    <div class= "col-sm-4"> </div>
  </div>

  <div class= "form-group">
      <div class="col-sm-2"><%= t.label :due_date, class:"control-label" %></div>
      <div class="col-sm-4"><%= t.date_field :due_date, class:"form-control" %></div>
      <div class= "col-sm-6"> </div>
  </div>

  <div class= "form-group">
    <div class="col-sm-6 col-sm-offset-2">
      <% if @page_name != "New" %>
      <p><%= t.check_box :complete %> Complete</p>
      <% end %>
    </div>

    <div class="col-sm-6 col-sm-offset-2 extra-padding">
      <%= t.submit class: "btn btn-primary"%>
      <%= link_to 'cancel', tasks_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
