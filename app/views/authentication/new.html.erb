

<div class="row form-group">
  <div class="well col-md-4 col-md-offset-4">
    <h3 class = "page-header">Sign into gCamp</h3>

    <div class="text-danger">
      <%= flash[:error] %>
    </div>
    <%= form_tag signin_path, method: :post, :class => "form-horizontal", :role => 'form' do %>
    <div class="form-group">
      <%= label_tag :email, nil, class: "control-label" %>
      <div>
        <%= text_field_tag :email, nil, class: "form-control col-md-12" %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :password, nil, class: "control-label" %>
      <div>
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div>
        <%= submit_tag 'Sign in', class: 'btn btn-primary' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
