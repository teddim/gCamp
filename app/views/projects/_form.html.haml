%ol.breadcrumb
  %li
    = link_to 'Projects', projects_path
    -if @page_name == "New"
      %li
        = "New Project"
    -if @page_name == "Edit"
      %li
        = link_to @project.name_was, project_path(@project)
      %li
        = "Edit"

= render partial: "shared/error", locals: {object: @project}

= form_for(@project, html: { class: "form-horizontal" }) do |proj|
  .form-group
    = proj.label :name, class:"control-label col-sm-2"
    .col-sm-6
      = proj.text_field :name, class:"form-control"
    .col-sm-4

  .form-group
    .col-sm-6.col-sm-offset-2
      = proj.submit name_of_button, class: "btn btn-primary"
      = link_to 'Cancel', projects_path, class: "btn btn-default"
